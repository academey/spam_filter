<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>Spam filter</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
</head>

<body>
  <div id="react-app"></div>
  <% if (htmlWebpackPlugin.options.NODE_ENV == 'development') { %>
    <script src="<%= htmlWebpackPlugin.files.js[0] %>"></script>
    <% } else if (htmlWebpackPlugin.options.NODE_ENV == 'stage') { %>
      <script src="https://s3.amazonaws.com/spam-filter-app/stage/<%= htmlWebpackPlugin.files.js[0] %>?<%= Math.floor(Math.random() * 100000000000) %>"></script>
      <% } else { %>
        <script src="https://s3.amazonaws.com/spam-filter-app/<%= htmlWebpackPlugin.files.js[0] %>?<%= Math.floor(Math.random() * 100000000000) %>"></script>
        <% } %>
</body>

</html>
